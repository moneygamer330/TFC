<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="1000.0" prefWidth="869.0" stylesheets="@../css/menu.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MenuController">
    <children>
        <BorderPane prefHeight="1000.0" prefWidth="869.0">
            <top>
                <Pane prefHeight="116.0" prefWidth="869.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label layoutX="29.0" layoutY="26.0" prefHeight="42.0" prefWidth="198.0" text="Casa Guanchincahn" textAlignment="CENTER" wrapText="true" />
                        <Label fx:id="dateTimeLabel" layoutX="665.0" layoutY="-2.0" prefHeight="97.0" prefWidth="140.0" wrapText="true" />
                  <Label layoutX="604.0" layoutY="-2.0" prefHeight="97.0" prefWidth="68.0" text="Hora:   Día:" wrapText="true" />
                    </children>
                </Pane>
            </top>
            <left>
                <Pane prefHeight="648.0" prefWidth="124.0" BorderPane.alignment="CENTER">
                    <children>
                        <VBox id="menuVBox" prefHeight="470.0" prefWidth="150.0">
                            <children>
                                <Button fx:id="starters" mnemonicParsing="false" onAction="#loadStarters" prefHeight="45.0" prefWidth="120.0" text="Entrantes" />
                                <Button fx:id="principal" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#loadPrincipal" prefHeight="45.0" prefWidth="120.0" text="Principal" />
                                <Button fx:id="desserts" layoutX="10.0" layoutY="45.0" mnemonicParsing="false" onAction="#loadDesserts" prefHeight="45.0" prefWidth="120.0" text="Postres" />
                                <Button fx:id="drinks" layoutX="10.0" layoutY="80.0" mnemonicParsing="false" onAction="#loadDrinks" prefHeight="45.0" prefWidth="120.0" text="Bebidas" />
                            </children>
                        </VBox>
                    </children>
                </Pane>
            </left>
            <right>
                <Pane prefHeight="648.0" prefWidth="230.0" BorderPane.alignment="CENTER">
                    <children>
                        <TableView fx:id="orderTable" layoutX="-43.0" layoutY="21.0" prefHeight="471.0" prefWidth="258.0">
                            <columns>
                                <TableColumn prefWidth="91.0" text="Producto" />
                                <TableColumn prefWidth="68.0" text="Precio" />
                                <TableColumn prefWidth="97.0" text="Cantidad" />
                            </columns>
                        </TableView>
                        <Button fx:id="remove" layoutX="-14.0" layoutY="522.0" mnemonicParsing="false" onAction="#clearOrder" prefHeight="81.0" prefWidth="200.0" text="Borrar pedido" />
                        <Button fx:id="ticket" layoutX="-14.0" layoutY="646.0" mnemonicParsing="false" prefHeight="81.0" prefWidth="200.0" text="Ticket" />
                    </children>
                </Pane>
            </right>
            <bottom>
                <Pane prefHeight="84.0" prefWidth="804.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label fx:id="orderSummaryLabel" layoutX="23.0" layoutY="27.0" prefHeight="30.0" prefWidth="300.0" text="Total: 0.00€ (0 artículos)" />
                        <Button fx:id="confirmOrderButton" layoutX="649.0" layoutY="20.0" mnemonicParsing="false" onAction="#confirmOrder" prefHeight="40.0" prefWidth="130.0" text="Confirmar " />
                    </children>
                </Pane>
            </bottom>
            <center>
                <AnchorPane prefHeight="648.0" prefWidth="274.0" BorderPane.alignment="CENTER">
                    <children>
                        <StackPane fx:id="stackPane" prefHeight="694.0" prefWidth="451.0" />
                    </children>
                </AnchorPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
